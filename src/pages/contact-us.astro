---
import MasterLayout from '../layouts/MasterLayout.astro'
import HeroSub from '../components/HeroSub.astro'

interface Link {name:string, link:string}
interface Crumb {main:string, path: Link[] }

const breadcrumbs: Crumb = {
    main: "Contact Us",
    path: [
        {link: "/", name: "Home"},
        {link: "/contact-us", name: "Contact Us"},
    ]
}
---
<MasterLayout>
    <main>
		<!--hero-->
		<section class="bg-brown flex flex-col items-center justify-center text-white py-20">
			<h1 class="text-4xl font-bold font-baloo">Contact us</h1>
			<h4 class="text-lg tracking-widest">Home / Contact Us</h4>
		</section>


		<section class="grid grid-cols-1 lg:grid-cols-12 gap-16 py-10 px-5 lg:px-32 mt-20 relative">
			<div class="col-span-6">
				<h3 class="font-baloo font-bold text-4xl">Contact Info</h3>
				<p class="mt-2">
					Feel free to contact us or drop us a message and we shall get back to you at our earliest convenience.
				</p>
				<div class="flex space-x-4 mt-5">
					<i class="fas fa-phone text-2xl text-sky-500"></i>
					<p>+2547-291-188-77</p>
				</div>

				<div class="flex space-x-4 mt-5">
					<i class="fas fa-location text-2xl text-orange"></i>
					<p>Along Wambaa road, 0.5km off the Nairobi- Nakuru Highway at Muthigaâ€™s Munyua road</p>
				</div>

				<div class="flex space-x-4 mt-5">
					<i class="fas fa-address-book text-2xl text-success"></i>
					<p>P.O BOX 1882-00502, <br> Nairobi.</p>
				</div>

				<div class="flex space-x-4 mt-5">
					<i class="fas fa-mailbox text-2xl text-purple"></i>
					<a href="#" class="underline">info@loftycreekchristianschool.org</a>
				</div>

			</div>

			<div class="col-span-6">
				<h3 class="font-baloo font-bold text-4xl">Send us a message</h3>

				<form class="grid grid-cols-1 lg:grid-cols-12 gap-2 mt-5">
					<div class="col-span-12 lg:col-span-6">
						<label for="name" class="block mb-2 text-sm font-medium">Name</label>
						<input type="text" id="name" class="prose prose-base block py-2 px-3 w-full text-sm bg-slate-500/10 rounded-lg border border-gray-400 focus:ring-slate-300 focus:border-white">
					</div>
					<div class="col-span-12 lg:col-span-6">
						<label for="email" class="block mb-2 text-sm font-medium">Email</label>
						<input type="text" id="email" class="prose prose-base block py-2 px-3 w-full text-sm bg-slate-500/10 rounded-lg border border-gray-400 focus:ring-slate-300 focus:border-white">
					</div>
					<div class="col-span-12 lg:col-span-6">
						<label for="subject" class="block mb-2 text-sm font-medium">Subject</label>
						<input type="text" id="subject" class="prose prose-base block py-2 px-3 w-full text-sm bg-slate-500/10 rounded-lg border border-gray-400 focus:ring-slate-300 focus:border-white">
					</div>
					<div class="col-span-12 lg:col-span-12">
						<label for="message" class="block mb-2 text-sm font-medium">Your message</label>
						<textarea id="message" rows="4" class="prose prose-base block p-2.5 w-full text-sm bg-slate-500/10 rounded-lg border border-gray-300 focus:ring-slate-300 focus:border-white" placeholder="Your message..."></textarea>

					</div>

					<div class="col-span-12">
						<button type="button" class="relative mt-5 text-white bg-orange font-bold font-baloo focus:ring-4 focus:outline-none focus:ring-blue-300 rounded-lg text-md px-5 py-2 text-center inline-flex items-center
						 after:w-[22%] after:h-full after:absolute
						 after:bg-slate-800/20 after:right-0 after:rounded-r-md
						 hover:after:w-[100%] hover:after:rounded-l-md
						 after:transition-all after:duration-700
						 ">
							<span class="z-10">Send Message</span>
							<svg aria-hidden="true" class="w-5 h-5 ml-3 z-10 -mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
						</button>
					</div>
				</form>
			</div>
		</section>

	</main>
</MasterLayout>